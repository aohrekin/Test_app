<p id="notice"><%= notice %></p>

<h1>People</h1>

<table class = "table table-hover">
  <thead>
    <tr>
      <th><%= Person.human_attribute_name(:first_name) %></th>
      <th><%= Person.human_attribute_name(:last_name) %></th>
      <th><%= Person.human_attribute_name(:second_name) %></th>
      <th><%= Person.human_attribute_name(:birthday) %></th>
      <th><%= Person.human_attribute_name(:sex) %></th>
      <th><%= Person.human_attribute_name(:post) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.second_name %></td>
        <td><%= person.birthday %></td>
        <td><%= person.sex %></td>
        <td><%= person.post.name %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a type="button" class="btn btn-info" href="/people/new">New person</a>
